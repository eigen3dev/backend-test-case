{
    "env": {
        "node": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended",
        "plugin:jest/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "overrides": [
        {
            "files": ["**/tests/**/*.js", "**/*.test.js"],
            "env": {
                "jest": true
            },
            "rules": {
                "no-undef":"off"
            }
        }
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "semi": false,
                "trailingComma": "es5",
                "endOfLine": "auto"
            }
        ]
    }
}
